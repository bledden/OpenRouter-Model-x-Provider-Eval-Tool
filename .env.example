# OpenRouter Eval Dashboard - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: OpenRouter API Key
# =============================================================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=eval
POSTGRES_PASSWORD=evalpass
POSTGRES_DB=eval_db
POSTGRES_PORT=5432

# Full connection strings (auto-generated from above in docker-compose)
# DATABASE_URL=postgresql://eval:evalpass@localhost:5432/eval_db

# =============================================================================
# Service Configuration
# =============================================================================
# Benchmark service (FastAPI backend)
BENCHMARK_SERVICE_PORT=8000
ENVIRONMENT=development

# Dashboard (Next.js frontend)
DASHBOARD_PORT=3000
NEXT_PUBLIC_EVAL_SERVICE_URL=http://localhost:8000

# CORS - comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# Optional Services
# =============================================================================
# Redis (for distributed rate limiting, start with --profile full)
REDIS_PORT=6379
